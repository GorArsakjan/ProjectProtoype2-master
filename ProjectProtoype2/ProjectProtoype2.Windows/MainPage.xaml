            </Grid>
            <Grid Margin="530,0,0,0" d:LayoutOverrides="TopPosition, BottomPosition">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="800"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Row="1" Source="Assets/MainPage/download.jpg" Margin="110,10,-10,0" d:LayoutOverrides="TopPosition, BottomPosition"/>
                <TextBlock x:Name="WeekOfferTextBlock" HorizontalAlignment="Left" Margin="110,80,0,0" TextWrapping="Wrap" Text="Offer of the week" VerticalAlignment="Top" Height="35" Width="265" FontSize="29.333"/>
                <TextBlock x:Name="WeekOfferHeaderTextBlock" Margin="110,43,96,0" Grid.Row="2" TextWrapping="Wrap" Text="Lorem Ipsum" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition" Height="35" FontSize="18.667"/>
