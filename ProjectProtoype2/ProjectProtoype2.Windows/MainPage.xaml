                <Button x:Name="button" Content="" BorderBrush="Transparent" HorizontalAlignment="Left" Margin="103,38,0,0" VerticalAlignment="Top" Height="90" Width="86"/>
                <Button x:Name="button_Copy" Content="" BorderBrush="Transparent" HorizontalAlignment="Left" Margin="348,53,0,0" VerticalAlignment="Top" Height="90" Width="86"/>
            </Grid>
            <Button x:Name="button1" Content="Choose the cities" HorizontalAlignment="Left" BorderBrush="Transparent" VerticalAlignment="Top" Height="61" Width="268" FontSize="24" Margin="1037,66,0,0" Click="button1_Click"/>
        </Grid>
    </ScrollViewer>
</Page>
